@model TestsApp.Models.NombreTabla

@{
    ViewBag.Title = "Editar";
}

<h2>Editar Título</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>NombreTabla</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Tabla)

        <div class="editor-label">
            @Html.LabelFor(model => model.NombreMostrar)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NombreMostrar)
            @Html.ValidationMessageFor(model => model.NombreMostrar)
        </div>

        <p>
            <input type="submit" value="Guardar" class="btn btn-mini" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
