@model TestsApp.Models.LocalPasswordModel
@{
    ViewBag.Title = "Cambiar Contraseña";
}
<div class="row-fluid">
    <div class="span6">
        @using (Html.BeginForm("Manage", "Account"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
    
            <fieldset>
                <legend>Cambiar Contraseña</legend>

                
                    Contraseña Actual
                <div class="input full-width">
                @Html.PasswordFor(m => m.OldPassword, new { @class="span6" })
                </div>
                
                    Contraseña Nueva
                <div class="input full-width">
                @Html.PasswordFor(m => m.NewPassword, new { @class="span6" })
                </div>
                
                    Confirmar Nueva Contraseña
                <div class="input full-width">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class="span6" })
                </div>
                <input type="submit" value="Cambiar Contraseña" class="btn btn-mini" />
            </fieldset>
        
        }
    </div>
</div>
