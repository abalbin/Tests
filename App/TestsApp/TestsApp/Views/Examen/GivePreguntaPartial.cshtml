@model TestsApp.Models.Pregunta

@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.IdExamen)
<div class="row-fluid">
    <div class="span12">
        Pregunta @Model.Orden de @Model.Examen.Pregunta.Count
        <p class="lead">
            @Html.DisplayFor(m => m.Texto)
        </p>
        <div class="row-fluid row-margin-bottom-regular">
            <div class="span8">
                <div id="RespuestasContainer">
                    <ul>
                        @Html.EditorFor(m => m.Respuesta)
                    </ul>
                </div>
            </div>
        </div>
        <div class="row-fluid center">
            <input type="submit" value="Terminar" class="hidden btn-terminar-examen-hidden" />
            <div class="btn-group">
                @if (Model.Orden > 1)
                {
                    <button type="button" id="btnPreviousQuestion" class="btn btn-small" onclick="PreviousQuestion()">Anterior</button>
                }
           
                
                @if (Model.Orden == Model.Examen.Pregunta.Count)
                {
                    <input type="submit" value="Terminar" id="btnFinish" class="btn btn-small green btn-terminar-examen" />
                }
           
                @if (Model.Orden < Model.Examen.Pregunta.Count)
                {
                    <button type="button" id="btnNextQuestion" class="btn btn-small medium-blue pull-right" onclick="NextQuestion()">Siguiente</button>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function NextQuestion() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("NextQuestion", "Examen")',
            data: $('#frmPreguntas').serialize(),
            success: function (result) {
                $("#PreguntasContainer").html(result);
                $("#PreguntasContainer").find('input:checkbox').uniform();
            },
            error: function () {

            },
            beforeSend: startingAjax,
            complete: ajaxCompleted
        });
    }

    function PreviousQuestion() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("PreviousQuestion", "Examen")',
            data: $('#frmPreguntas').serialize(),
            success: function (result) {
                $("#PreguntasContainer").html(result);
                $("#PreguntasContainer").find('input:checkbox').uniform();
            },
            error: function () {

            },
            beforeSend: startingAjax,
            complete: ajaxCompleted
        });
    }
</script>
