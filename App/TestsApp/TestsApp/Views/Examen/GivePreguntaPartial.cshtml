@model TestsApp.Models.Pregunta
@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Id);
<div class="row-fluid">
    <div class="padded">
        <div class="span12">
            <div class="box-header">
                @Model.Orden
                .
                @Html.DisplayFor(m => m.Texto)
                <div class="pull-right">
                    Puntaje: @Html.DisplayFor(m => m.Puntaje)
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="padded">
                        <div id="RespuestasContainer">
                            <ul>
                                @Html.EditorFor(m => m.Respuesta)
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                @if(Model.Orden > 1)
                {
                <button type="button" id="btnPreviousQuestion" class="btn btn-small" onclick="PreviousQuestion()">Anterior</button>
                }
                @if(Model.Orden < Model.Examen.Pregunta.Count)
                {
                <button type="button" id="btnNextQuestion" class="btn btn-small medium-blue" onclick="NextQuestion()">Siguiente</button>
                }
            </div>
        </div>
    </div>
</div>
}

<script type="text/javascript"> 
    function NextQuestion() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("NextQuestion", "Examen")',
            data: $('form').serialize(),
            success: function (result) {
                $("#PreguntasContainer").html(result);
                $("#PreguntasContainer").find('input:checkbox').uniform();
            },
            error: function () {

            }
        });
    }

    function PreviousQuestion() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("PreviousQuestion", "Examen")',
            data: $('form').serialize(),
            success: function (result) {
                $("#PreguntasContainer").html(result);
                $("#PreguntasContainer").find('input:checkbox').uniform();
            },
            error: function () {

            }
        });
    }
</script>