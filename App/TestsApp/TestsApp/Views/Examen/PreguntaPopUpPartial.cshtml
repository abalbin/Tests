@model TestsApp.Models.ViewModels.CreatePreguntaViewModel
@Html.HiddenFor(m => m.pregunta.Orden, new { @id = "hdnOrdenPregunta" })
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>Agregar Pregunta</h3>
</div>
<div class="modal-body">
    <div class="row-fluid">
        <div class="span6">
            <div class="input full-width">
                <input id="hdnIndexPregunta" type="hidden" />
                @Html.TextBoxFor(m => m.pregunta.Texto, new { @id = "txtPregunta", @placeholder = "Texto de la Pregunta" })
            </div>
            @if (Model.idTipoExamen != 2)
            { 
                <div class="input full-width">
                    @Html.LabelFor(model => model.pregunta.TipoPregunta, "Tipo de Pregunta")
                    @Html.DropDownListFor(m => m.pregunta.IdTipoPregunta, new SelectList(new TestsApp.Models.TestsAppBDEntities().TipoPregunta, "Id", "Nombre"), string.Empty, new Dictionary<string, object>
                                                       {
                                                           { "data-placeholder", "Seleccione" }, 
                                                           { "class", "chzn-select" },
                                                           { "id", "ddlTipoPregunta"}
                                                       })

                </div>
                <div class="input full-width">
                    @Html.LabelFor(model => model.pregunta.Puntaje, "Puntaje")
                    @Html.TextBoxFor(m => m.pregunta.Puntaje, new { @id = "txtPuntaje", @placeholder = "Puntaje de la Pregunta" })
                </div>
            }
            <div class="input full-width" id="msgErrorPregunta">
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-small">Cerrar</button>
    <button type="button" id="GuardarPregunta" class="btn btn-small medium-blue" onclick="GuardarPregunta_Click()">Guardar</button>

</div>

<script type="text/javascript">
    $(document).ready(OnDocumentReady);
    function OnDocumentReady() {
        //$('#GuardarPregunta').unbind("click", GuardarPregunta_Click).click(GuardarPregunta_Click);
    }


</script>
