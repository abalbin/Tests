@model IEnumerable<TestsApp.Models.Estado>

@{
    ViewBag.Title = "Administración de Estados";
}

<h2>Administración de Estados</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table table-striped data-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdEstado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>Acciones
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new {  id=item.IdEstado  }) |
            @Html.ActionLink("Ver Detalles", "Details", new {  id=item.IdEstado  }) |
            @Html.ActionLink("Eliminar", "Delete", new {  id=item.IdEstado  })
            </td>
        </tr>
    }

</table>
